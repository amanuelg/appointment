
    <%= link_to "New Appointment", new_appointment_path, class: "btn btn-primary" %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Comment</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @appointments.each do |appointment| %>
            <tr>
                <td><%= appointment.first_name %></td>
                <td><%= appointment.last_name %></td>
                <td><%= date_for_display(appointment.start_time) %></td>
                <td><%= date_for_display(appointment.end_time) %></td>
                <td><%= appointment.comment %></td>
                <td><%= link_to 'Show', appointment %> | 
                    <%= link_to 'Edit', edit_appointment_path(appointment) %> |
                    <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </tbody>
    
</table>
<%= will_paginate %>